<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tarefas_Visualizar">


    <TextView
            android:id="@+id/edt_tituloatv"
            tools:text="Estudar muito tudo"
            android:textSize="30sp"
            app:fontFamily="@font/better"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/better"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"/>
    <TextView
            android:id="@+id/edt_statusatv"
            tools:text="A fazer"
            app:fontFamily="@font/futura"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_width="350dp"
            android:textAlignment="viewStart"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edt_tituloatv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.508"/>
    <TextView
            android:id="@+id/edt_descricaoatv"
            tools:text="@tools:sample/lorem/random"
            android:textSize="15sp"
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/edt_statusatv" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>